{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@types/*": ["types/*"]
    },
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "downlevelIteration": true
  },
  "include": ["src"]
}
